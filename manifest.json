{
  "manifest_version": 2,

  "name": "HN Comment Fixer",
  "description": "Replaces Hacker News comments with 'Very Interesting!'",
  "version": "1.0",
  "icons": { "128": "icon_128.png",
              "64": "icon_64.png" },
  "content_scripts": [
    {
      "matches": ["https://news.ycombinator.com/*"],
      "js": ["hnfix.js"]
    }
  ]
}